print("──── ୨୧ ────")
con = input("Choose your stage (1/2/3/4/5) : ")
if con == "1" :
    print("Now chosen : ", s1)
    print("Available zone : A1/A2/A3/VIP")
    seat = input("Please choose a zone : ")
    if seat == "A1" :
        print("Please select a seat (1-10)")
        seat2 = input("Seat number : ")
        print(s1, ", zone :",seat, ", Seat number",seat2, "is now booked")
        print("Thanks for booking! Hope you enjoy your concert.☘︎ ݁˖")
    elif seat == "A2" :
        print("Please select a seat (1-10)")
        seat2 = input("Seat number : ")
